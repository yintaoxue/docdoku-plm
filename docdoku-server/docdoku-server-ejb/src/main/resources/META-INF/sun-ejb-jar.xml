<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sun-ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD GlassFish Application Server 3.0 EJB 3.1//EN" "http://www.sun.com/software/appserver/dtds/sun-ejb-jar_3_1-0.dtd">
<sun-ejb-jar>
    <security-role-mapping>
        <role-name>users</role-name>
        <group-name>users</group-name>
    </security-role-mapping>
    <enterprise-beans>
        <ejb>
            <ejb-name>DocumentManagerBean</ejb-name>
            <jndi-name>ejb/DocumentManagerBean</jndi-name>
<!--            <resource-ref>
                <res-ref-name>jms/docdokuConnFactory</res-ref-name>
                <jndi-name>jms/docdokuConnFactory</jndi-name>
                <default-resource-principal>
                    <name>guest</name>
                    <password>guest</password>
                </default-resource-principal>
            </resource-ref>-->
            <webservice-endpoint>
                <port-component-name>DocumentManagerBean</port-component-name>
                <endpoint-address-uri>services/document</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>ProductManagerBean</ejb-name>
            <jndi-name>ejb/ProductManagerBean</jndi-name>
            <webservice-endpoint>
                <port-component-name>ProductManagerBean</port-component-name>
                <endpoint-address-uri>services/product</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>UploadDownloadService</ejb-name>
            <jndi-name>ejb/UploadDownloadService</jndi-name>
<!--            <resource-ref>
                <res-ref-name>jms/docdokuConnFactory</res-ref-name>
                <jndi-name>jms/docdokuConnFactory</jndi-name>
                <default-resource-principal>
                    <name>guest</name>
                    <password>guest</password>
                </default-resource-principal>
            </resource-ref>-->
            <webservice-endpoint>
                <port-component-name>UploadDownloadService</port-component-name>
                <endpoint-address-uri>services/UploadDownload</endpoint-address-uri>
                <login-config>
                    <auth-method>BASIC</auth-method>
                    <realm>docdokuRealm</realm>
                </login-config>
            </webservice-endpoint>
        </ejb>
        <ejb>
            <ejb-name>UserManagerBean</ejb-name>
            <jndi-name>ejb/UserManagerBean</jndi-name>
        </ejb>
        <ejb>
            <ejb-name>ProductManagerBean</ejb-name>
            <jndi-name>ejb/ProductManagerBean</jndi-name>
        </ejb>
        <ejb>
            <ejb-name>MailerBean</ejb-name>
            <jndi-name>ejb/MailerBean</jndi-name>
            <resource-ref>
                <res-ref-name>mail/docdokuSMTP</res-ref-name>
                <jndi-name>mail/docdokuSMTP</jndi-name>
            </resource-ref>
        </ejb>
        <ejb>
            <ejb-name>IndexerBean</ejb-name>
            <jndi-name>ejb/IndexerBean</jndi-name>
        </ejb>
        <ejb>
            <ejb-name>IndexSearcherBean</ejb-name>
            <jndi-name>ejb/IndexSearcherBean</jndi-name>
        </ejb>
    </enterprise-beans>
</sun-ejb-jar>
